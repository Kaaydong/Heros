<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_heroItem_name"
        android:layout_width="168dp"
        android:layout_height="37dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/textView_heroItem_number"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name" />

    <TextView
        android:id="@+id/textView_heroItem_number"
        android:layout_width="82dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:textSize="64sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#" />

    <TextView
        android:id="@+id/textView_heroItem_description"
        android:layout_width="166dp"
        android:layout_height="34dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toEndOf="@+id/textView_heroItem_number"
        app:layout_constraintTop_toBottomOf="@+id/textView_heroItem_name"
        tools:text="Description" />
</androidx.constraintlayout.widget.ConstraintLayout>